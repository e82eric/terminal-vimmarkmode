<UserControl x:Class="Microsoft.Terminal.Control.SearchBoxControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Microsoft.Terminal.Control"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="Root"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Top"
             d:DesignHeight="55"
             d:DesignWidth="285"
             Background="Black"
             Opacity="1"
             TabNavigation="Cycle"
             mc:Ignorable="d">

    <StackPanel Margin="8"
                Padding="4,8" Background="#282828">

            <!-- Border -->
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="4" x:Name="FuzzySearchContainer" Margin="0,0,0,8">
            <SwapChainPanel x:Name="FuzzySearchSwapChainPanel" Height="400" HorizontalAlignment="Stretch">
            </SwapChainPanel>
            </Border>

        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8">
            <ListBox
            ItemsSource="{x:Bind ItemsSource, Mode=OneWay}"
            x:Name="ListBox"
                                 
            SelectionChanged="OnListBoxSelectionChanged"
                Background="#FF282828"
                BorderBrush="#32302F"
                BorderThickness="3"
                Height="330">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="local:Search2TextLine">
                        <local:Search2TextControl Text="{x:Bind}" HorizontalAlignment="Stretch"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
            <TextBox x:Name="TextBoxZ"
                 x:Uid="SearchBox2_TextBox"
                 IsSpellCheckEnabled="False"
                 KeyDown="TextBoxKeyDown"
                 Background="Black"
                 TextChanged="TextBoxTextChanged"/>
        </Border>
    </StackPanel>
</UserControl>
